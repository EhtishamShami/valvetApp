<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_height="250dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/item_name"
        android:text="Item Name"
        android:textSize="18sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/size_label"
        android:text="Size: "
        android:layout_below="@+id/item_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/size_label"
        android:layout_toEndOf="@+id/size_label"
        android:id="@+id/size_value"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/item_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
     />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/size_label"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/purchase_price"
        android:textColor="#E91E63"
        android:textSize="11sp"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/purchase_price"
        android:layout_toEndOf="@+id/purchase_price"
        android:id="@+id/retail_price"
        android:textSize="11sp"
        android:layout_marginTop="5.5dp"
        />

    </RelativeLayout>



</RelativeLayout>